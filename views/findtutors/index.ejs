<!DOCTYPE html>

<html lang="en">
	<head>
		<%- include('../partials/top.ejs')%>
		<link rel="stylesheet" href="/findtutors/index.css" />
	</head>

	<body>
		<%- include('../partials/nav.ejs')%>

		<main>
			<article>
				<session-list>
					<% for (const session of sessions) { %>
					<session-item class="<%- session.student ? 'taken' : '' %>">
						<h3><%- session.subject %></h3>

						<div>
							<div>Offered by <b><%- session.tutor %></b></div>
							<% if (session.student) { %>
							<div>Taken by <b><%- session.student %></b></div>
							<% } %>
						</div>
	
						<session-time>Starts at <b><%- session.begin %></b>&#x2002;â€¢&#x2002;<b><%- session.duration * 60 %> min</b></session-time>
					</session-item>
					<% } %>
				</session-list>
			</article>

			<%- include('../partials/footer.ejs')%>
		</main>
	</body>
</html>